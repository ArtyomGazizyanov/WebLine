<div class="jumbotron">
    <h1>Поиск</h1>
    <div class="row">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-md-2" for="HotelName">Отель</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="HotelName" name="HotelName" type="text" value="" />
                    <span class="field-validation-valid text-danger" data-valmsg-for="HotelName" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Room">Номер</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="Room" name="Room" type="text" value="" />
                    <span class="field-validation-valid text-danger" data-valmsg-for="Room" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="Date">Дата заезда</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="Date" name="Date" type="text" value="" />
                    <span class="field-validation-valid text-danger" data-valmsg-for="Date" data-valmsg-replace="true"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input id="send" type="submit" value="Найти тариф" class="btn btn-default" />
                </div>
            </div>
        </div>
        <div id="search_table">
            <div id="error_box">
                <span>Ничего не найдено!</span>
            </div>
            <table id="search_result" class="row table_room">
                <thead>
                    <tr>
                        <th class="col-md-2">Тариф</th>
                        <th class="col-md-2">Цена</th> 
                    </tr>
                </thead>
                <tbody id="allTariffs"></tbody>
            </table>
        </div>
        <div id="messege_box"></div>
    </div>
</div>
@section scripts
{  
    <script type="text/javascript" src="../../Scripts/InputChecker.js"></script> 
    <script type="text/javascript" src="../../Scripts/Search/ResponseHandler.js"></script> 
    <script type="text/javascript" src="../../Scripts/Search/StartSearch.js"></script> 
    @*<script type="text/javascript" src="../../Scripts/RoomIndex/GetAllRooms.js"></script>*@ 
}
    
